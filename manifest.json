{
  "manifest_version": 2,
  "name": "Fastlane Tabs",
  "version": "1.0",
  "description": "Creates a popup for switching tabs fast and easy, with similar functionality as tab switching often has in other browsers.",
  "permissions": ["tabs", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "browser_action": {
    "default_title": "Fastlane Tabs",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg"
    },
    "default_popup": "information.html"
  },
  "commands": {
    "open-popup": {
      "suggested_key": { "default": "Ctrl+Alt+S" },
      "description": "Send a 'toggle-feature' event to the extension"
    }
  },
  "web_accessible_resources": [
    "popup.html",
    "popup.css",
    "information.html",
    "information.css"
  ]
}
